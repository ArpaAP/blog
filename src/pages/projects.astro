---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { projects } from '@/data/projects';
import ProjectCard from '@/components/ProjectCard.astro';
---

<BaseLayout title="Projects - Devlog Alpha">
  <div class="mb-12">
    <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4">Projects</h1>
    <p class="text-gray-500 dark:text-gray-400 text-lg">A selection of my recent work and experiments.</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    {projects.map((project) => (
      <ProjectCard project={project} />
    ))}
  </div>
</BaseLayout>
