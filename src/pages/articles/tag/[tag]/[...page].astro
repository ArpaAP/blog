---
import BaseLayout from '@/layouts/BaseLayout.astro';
import CategorySidebar from '@/components/CategorySidebar.astro';
import ArticleListItem from '@/components/ArticleListItem.astro';
import { getCollection, type CollectionEntry } from 'astro:content';
import type { GetStaticPaths, Page } from 'astro';

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const posts = await getCollection('articles');
  const tags = posts.flatMap(post => post.data.tags || []);
  const uniqueTags = [...new Set(tags)];

  return uniqueTags.flatMap((tag) => {
    const filteredPosts = posts.filter(post => post.data.tags.includes(tag))
      .sort((a, b) => b.data.published_at.valueOf() - a.data.published_at.valueOf());
    
    return paginate(filteredPosts, {
      params: { tag },
      pageSize: 6
    });
  });
}

interface Props {
  page: Page<CollectionEntry<'articles'>>;
}

const { page } = Astro.props;
const { tag } = Astro.params;
const tagName = tag;

const pageTitle = `Articles tagged "${tagName}"`;
---

<BaseLayout title={`${pageTitle} - Devlog Alpha`}>
  <div class="mb-12">
    <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4">#{tagName}</h1>
    <p class="text-gray-500 text-lg">Articles tagged with {tagName}.</p>
  </div>

  <div class="flex flex-col md:flex-row gap-12">
    <CategorySidebar currentTag={tagName} />
    
    <div class="grow">
      {page.data.length > 0 ? (
        <div class="flex flex-col">
          {page.data.map((post) => (
            <ArticleListItem post={post} />
          ))}

          <div class="flex justify-between items-center mt-12">
             {page.url.prev ? (
               <a href={page.url.prev} class="px-4 py-2 border border-gray-200 dark:border-gray-700 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors text-gray-700 dark:text-gray-300">
                 &larr; Previous
               </a>
             ) : (
               <span class="px-4 py-2 text-gray-400 dark:text-gray-600 cursor-not-allowed">
                  &larr; Previous
               </span>
             )}
             
             <span class="text-sm text-gray-500 dark:text-gray-400">
               Page {page.currentPage} of {page.lastPage}
             </span>

             {page.url.next ? (
               <a href={page.url.next} class="px-4 py-2 border border-gray-200 dark:border-gray-700 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors text-gray-700 dark:text-gray-300">
                 Next &rarr;
               </a>
             ) : (
                <span class="px-4 py-2 text-gray-400 dark:text-gray-600 cursor-not-allowed">
                  Next &rarr;
                </span>
             )}
          </div>
        </div>
      ) : (
        <div class="py-12 text-center text-gray-500 bg-gray-50 rounded-lg border border-dashed border-gray-200">
          <p>No articles found for this tag.</p>
        </div>
      )}
    </div>
  </div>
</BaseLayout>
