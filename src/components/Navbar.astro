---
const links = [
  { name: 'INTRO', href: '/' },
  { name: 'PROJECTS', href: '/projects' },
  { name: 'ARTICLES', href: '/articles' },
];

const { pathname } = Astro.url;
import '@fontsource/fira-mono';
---

<nav class="w-full max-w-5xl mx-auto px-6 py-6 flex justify-between items-center bg-white/90 backdrop-blur-sm sticky top-0 z-50 border-b border-gray-100" style="font-family: 'Fira Mono', monospace;">
  <a href="/" class="text-xl font-bold tracking-tight text-gray-900 hover:text-brand-600 transition-colors">
    Studio Alpha
  </a>
  
  <div class="flex items-center gap-8">
    {links.map((link) => {
      const isActive = link.href === '/' ? pathname === '/' : pathname.startsWith(link.href);
      return (
        <a 
          href={link.href}
          class:list={[
            "text-sm font-medium tracking-wide transition-colors duration-200",
            isActive ? "text-brand-600" : "text-gray-500 hover:text-brand-600"
          ]}
        >
          {link.name}
        </a>
      );
    })}
  </div>
</nav>
