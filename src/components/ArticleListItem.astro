---
interface Props {
  post: any; // Ghost Post type
}

const { post } = Astro.props;
const date = new Date(post.published_at).toLocaleDateString('ko-KR', {
  year: 'numeric',
  month: 'short',
  day: 'numeric'
});
---

<a href={`/articles/${post.slug}`} class="group flex flex-col sm:flex-row gap-2 sm:gap-8 py-6 border-b border-gray-100 dark:border-white/5 hover:bg-gray-50 dark:hover:bg-white/1 transition-colors -mx-4 px-4">
  <div class="sm:w-32 shrink-0 pt-1">
    <time datetime={post.published_at} class="text-sm text-gray-400 font-mono">{date}</time>
  </div>
  
  <div class="grow">
    <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100 group-hover:text-brand-600 transition-colors mb-2">
      {post.title}
    </h3>
    <p class="text-gray-600 text-sm line-clamp-2 leading-relaxed">
      {post.custom_excerpt || post.excerpt}
    </p>
    
    {post.tags && post.tags.length > 0 && (
      <div class="mt-3 flex gap-2">
        {post.tags.map((tag: any) => (
          <span class="text-xs text-brand-600 font-medium bg-brand-50 dark:bg-brand-900 dark:text-brand-100 px-2 py-0.5 rounded">
            #{tag.name}
          </span>
        ))}
      </div>
    )}
  </div>
</a>
